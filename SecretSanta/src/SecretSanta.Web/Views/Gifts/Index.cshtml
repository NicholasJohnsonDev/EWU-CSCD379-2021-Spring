@model List<GiftViewModel>

@{
    ViewBag.Title = "Gifts";
    int counter = 0;
}

@foreach (var GiftViewModel in Model)
{
    <section>
        @GiftViewModel.Title @GiftViewModel.Priority <a asp-action="Edit" asp-route-id=@counter>Edit</a>
        <form asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
        @{
            counter++;
        }
    </section>
}
<section><a asp-action="Create">Create</a></section>
